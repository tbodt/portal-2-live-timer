<Window 
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
       Title="Portal2LiveTimer" Height="188" Width="419">
    <Grid Margin="0,0,2,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="timerDisplay" Content="0.00" Margin="0,10,10,0" VerticalAlignment="Top" FontSize="24" FontWeight="Bold" HorizontalAlignment="Right" Grid.Column="1" Grid.Row="1"/>
        <Button x:Name="startButton" Content="Start" Grid.Column="1" HorizontalAlignment="Left" Height="41" Margin="10,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="86"/>
    </Grid>
</Window> 
